#include<stdio.h>
#include<string.h>
int countPalindrome(char str[]) {
    int count = 0, i = 0;
    while (str[i]) {
        while (str[i] == ' ') i++;      // skip spaces
        int s = i, e = i;
        while (str[e] && str[e] != ' ') e++; // find word end
        int st = s, en = e - 1, pal = 1;
        while (st < en) {
            char a = str[st], b = str[en];
            if (a >= 'A' && a <= 'Z') a += 32;
            if (b >= 'A' && b <= 'Z') b += 32;
            if (a != b) { pal = 0; break; }
            st++; en--;
        }
        if (e > s && pal) count++;
        i = e;
    }
    return count;
}
int main()
{
  int t,i,j=0;
  char a[100];
  scanf("%[^\n]", a);
  j=countPalindrome(a);
  printf("%d",j);
  return 0;
}
