#include <stdio.h>
int kthLargest(int arr[], int size, int k) {
  // Write your code here
  for(int i=1;i<size;i++)
  {
    for(int j=0;j<i;j++)
    {
      if(arr[i]>arr[j])
      {
        int temp=arr[i];
        arr[i]=arr[j];
        arr[j]=temp;
      }
    }
  }
  return arr[k];
}
int main()
{
    int T, i, k, size = 0;
    scanf("%d", &T);

  while (T--)
  {
    scanf("%d", &k);
    scanf("%d", &size);

    int arr[size];
    for( i = 0; i < size; i++) 
        scanf("%d", &arr[i]);
    
        printf("%d\n",kthLargest(arr, size, k));
  }
  return 0;
}
